              <p>
                Dashboard
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="{{ path('dashboard') }}" class="nav-link">
                  <i class="far fa-user nav-icon"></i>
                  <p>Users</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="{{ path('pets_dashboard') }}" class="nav-link">
                  <i class="fas fa-cat nav-icon"></i>
                  <p>Pets</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link active">
                  <i class="fas fa-wifi nav-icon"></i>
                  <p>Connexions</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fas fa-money-check-alt nav-icon"></i>
                  <p>Factures</p>
                </a>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="{{ path('logout') }}" class="nav-link">
              <i class=" nav-icon fas far fa-sign-out-alt"></i>
              <p>
                DÃ©connexion
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Connexions</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3 id="newUsers">123</h3>

                <p>Nb Connexions</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                {# <h3>647 000<sup style="font-size: 20px">%</sup></h3> #}
                <h3 id="newUsersPerDay">123</h3>

                <p>Nouvelles Connexions</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3 id="">123</h3>

                <p>Test</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3 id="">3h18mn</h3>

                <p>Test</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- TABLE: LATEST ORDERS -->
            <div class="card col-md-12">
              <div class="card-header border-transparent">
                <h3 class="card-title">Tokens</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table m-0">
                    <thead>
                    {# <tr>
                      <th>{{ knp_pagination_sortable(pagination, 'id', 'u.iduser')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Lastname', 'u.lastname')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Firstname', 'u.firstname')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Email', 'u.email')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Country', 'u.country')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Sexe', 'u.sexe')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'Actif', 'u.active')}}</th>
                      <th>{{ knp_pagination_sortable(pagination, 'CreatedAt', 'u.createdAt')}}</th>
                    </tr>
                    </thead> #}
                    <tbody>

                    {# {% for user in pagination %}
                       <tr>
                        <td>{{ user.iduser }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.email }}</td>
                        <td><span class="badge badge-success">{{ user.country }}</span></td>
                        <td><span class="badge badge-success">{{ user.sexe }}</span></td>
                        <td><span class="badge badge-success">{% if user.active == '1' %}{{ user.active }}{% else %}0{% endif %}</span></td>
                        <td>
                          <div class="sparkbar" data-color="#00a65a" data-height="20">{{ user.createdAt|date("d/m/Y") }}</div>
                        </td>
                      </tr>
                    {% endfor %} #}

                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
                <div class="navigation">
                    {# {{ knp_pagination_render(pagination) }} #}
                </div>
              </div>
              <!-- /.card-footer -->
            </div>
        </div>
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-7 connectedSortable">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  <i class="fas fa-chart-pie mr-1"></i>
                  Graphiques
                </h3>
                <div class="card-tools">
                  <ul class="nav nav-pills ml-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="#age-chart-bar" data-toggle="tab">Bar</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#age-chart-doughnut" data-toggle="tab">Doughnut</a>
                    </li>
                  </ul>
                </div>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content p-0">
                  <!-- Morris chart - Sales -->
                  <div class="chart tab-pane active" id="age-chart-bar" style="position: relative; height: 300px;">
                    <canvas id="age-chart-bar-canvas" height="300" style="height: 300px;"></canvas>                         
                  </div>  
                  <div class="chart tab-pane" id="age-chart-doughnut" style="position: relative; height: 300px;">
                    <canvas id="age-chart-doughnut-canvas" height="300" style="height: 300px;"></canvas>                         
                  </div>  
                </div>
              </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
          </section>
          <!-- /.Left col -->
          <!-- right col (We are only adding the ID to make the widgets sortable)-->
          <section class="col-lg-5 connectedSortable">
          </section>
          <!-- right col -->
        </div>
        <!-- /.row (main row) -->
        
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <strong>Copyright &copy; 2019-2020 <a href="http://imie-paris.fr">Master IMIE</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block">
      <b>Version</b> 1.0.0
    </div>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>

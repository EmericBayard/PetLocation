{% block title %}{{ parent() }} Edit | User{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
      </ul>

    </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
      <img src="/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
           style="opacity: .8">
      <span class="brand-text font-weight-light">PetSearch</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" class="d-block">{{ loggedUser.firstname }} {{ loggedUser.lastname }}</a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item has-treeview menu-open">
            <a href="#" class="nav-link active">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                Dashboard
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="{{ path('dashboard') }}" class="nav-link active">
                  <i class="far fa-user nav-icon"></i>
                  <p>Users</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fas fa-cat nav-icon"></i>
                  <p>Pets</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="{{ path('connexions_dashboard') }}" class="nav-link">
                  <i class="fas fa-wifi nav-icon"></i>
                  <p>Connexions</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fas fa-money-check-alt nav-icon"></i>
                  <p>Factures</p>
                </a>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="{{ path('logout') }}" class="nav-link">
              <i class=" nav-icon fas far fa-sign-out-alt"></i>
              <p>
                DÃ©connexion
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Edit User</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
      
        <div class="row">
            <!-- TABLE: LATEST ORDERS -->
            <div class="card col-md-12">
              <div class="card-header border-transparent">
                <h3 class="card-title">Edit User</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <div class="table-responsive">
                   <div class="well">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                      <div class="col-md-12">
                        {{ form_label(form.firstname, "Firstname : ", {'label_attr': {'class': 'control-label col-md-6'}}) }}
                        <div class="col-md-6">
                          {{ form_widget(form.firstname) }}
                          {{ form_errors(form.firstname) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.lastname, "Lastname : ", {'label_attr': {'class': 'control-label col-md-4'}}) }}
                        <div class="col-md-8">
                          {{ form_widget(form.lastname) }}
                          {{ form_errors(form.lastname) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.email, "Email : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.email) }}
                          {{ form_errors(form.email) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.password, "Password : ", {'label_attr': {'class': 'control-label col-md-3'}}) }}
                        <div class="col-md-9">
                          {{ form_widget(form.password) }}
                          {{ form_errors(form.password) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.plainPassword, "Nouveau mot de passe : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.plainPassword) }}
                          {{ form_errors(form.plainPassword) }}
                        </div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.street, "Street : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.street) }}
                          {{ form_errors(form.street) }}
                        </div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.zip, "Zip : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.zip) }}
                          {{ form_errors(form.zip) }}
                        </div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.city, "City : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.city) }}
                          {{ form_errors(form.city) }}  
                        </div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.country, "Country : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.country) }}
                          {{ form_errors(form.country) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.birthday, "Birthday : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.birthday) }}
                          {{ form_errors(form.birthday) }}  
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.sexe, "Sexe : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.sexe) }}
                          {{ form_errors(form.sexe) }}
                        </div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.active, "Active : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">
                          {{ form_widget(form.active) }}
                          {{ form_errors(form.active) }}
                        </div>
                      </div>
                      <div class="form-group ligne">
                        <a href="{{ path('dashboard') }}" class="btn btn-default col-md-4 offset-md-2" style="margin-top: 10px">
                          Annuler
                        </a>
                         {# <a id="addlink" class="btn btn-success col-md-4" style="margin-top: 10px">
                          Editer
                        </a> #}
                        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-success col-md-4','style':'margin-top: 10px'}}) }}
                      </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                   </div>
                </div>
                <!-- /.table-responsive -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
               
              </div>
              <!-- /.card-footer -->
            </div>
        </div>
        
        
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <strong>Copyright &copy; 2019-2020 <a href="http://imie-paris.fr">Master IMIE</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block">
      <b>Version</b> 1.0.0
    </div>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->


{% endblock %}


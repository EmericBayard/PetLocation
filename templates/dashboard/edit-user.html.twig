    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
      
        <div class="row">
            <!-- TABLE: LATEST ORDERS -->
            <div class="card col-md-12">
              <div class="card-header border-transparent">
                <h3 class="card-title">Edit User</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <div class="table-responsive">
                   <div class="well">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                      <div class="col-md-12">
                        {{ form_label(form.firstname, "firstname : ", {'label_attr': {'class': 'control-label col-md-6'}}) }}
                        <div class="col-md-6">{{ form_widget(form.firstname) }}</div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.lastname, "lastname : ", {'label_attr': {'class': 'control-label col-md-4'}}) }}
                        <div class="col-md-8">{{ form_widget(form.lastname) }}</div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.email, "email : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.email) }}</div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.password, "password : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.password) }}</div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.street, "street : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.street) }}</div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.zip, "zip : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.zip) }}</div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.city, "city : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.city) }}</div>
                      </div>
                       <div class="col-md-12">
                        {{ form_label(form.country, "country : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.country) }}</div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.birthday, "birthday : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.birthday) }}</div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.sexe, "sexe : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.sexe) }}</div>
                      </div>
                      <div class="col-md-12">
                        {{ form_label(form.active, "active : ", {'label_attr': {'class': 'control-label col-md-5'}}) }}
                        <div class="col-md-7">{{ form_widget(form.active) }}</div>
                      </div>
                      <div class="form-group ligne">
                        <a href="{{ path('dashboard') }}" class="btn btn-default col-md-4 offset-md-2" style="margin-top: 10px">
                          Annuler
                        </a>
                         {# <a id="addlink" class="btn btn-success col-md-4" style="margin-top: 10px">
                          Editer
                        </a> #}
                        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-success col-md-4','style':'margin-top: 10px'}}) }}
                      </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                   </div>
                </div>
                <!-- /.table-responsive -->
              </div>
              <!-- /.card-body -->
              <div class="card-footer clearfix">
               
              </div>
              <!-- /.card-footer -->

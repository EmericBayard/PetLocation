          'sex': sex
        }),
        async: true,
        success : function(response){
          $("#nbUserBySex").html(response[0]['COUNT(*)']);
          $("#p_nbUserBySex").html(message);
        }
      });
    }

    let nbUsersByActive = (active = 1) => {
      
      let message = "Nombre d'utilisateurs actifs";
      if (!active ) message = "Nombre d'utilisateurs inactifs";
      
      $.ajax({
        
        url : '/users/count/active',
        type : 'POST',
        dataType: 'json',
        data: JSON.stringify({
          'active': active
        }),
        async: true,
        success : function(response){
          $("#nb_users_active").html(response[0]['COUNT(*)']);
          $("#p_nb_users_active").html(message);
        }
      });
    }

    let nbSubscriptionsUsersByActive = (active = 1) => {
      
      let message = "Nombre d'abonnements par utilisateurs actifs";
      if (!active ) message = "Nombre d'abonnements par utilisateurs inactifs";
      
      $.ajax({
        
        url : '/users/count/subscriptions',
        type : 'POST',
        dataType: 'json',
        data: JSON.stringify({
          'active': active
        }),
        async: true,
        success : function(response){
          $("#nb_subscription_per_active_user").html(response[0]['COUNT(*)']);
          $("#p_nb_subscription_per_active_user").html(message);
        }
      });
    }

    $("#newUserCritere").click(function(){
      nbUsersByPeriod();
    });

    $("#place_criteres").click(function(){

    let nbUsersByPeriod = () => {
      console.log($("#day").val())
      
      let period = moment().startOf('day').format();
      let url = '/users/count/day';
      let message = "Nouveaux utilisateurs today: " + moment(period).format("LL");

      if ($("#day").val()) {
        period = $("#day").val();
        message = "Nouveaux utilisateurs au jour: " + period;
      }
      if ($("#week").val()) {
        period = $("#week").val();
        url = '/users/count/week';
        message = "Nouveaux utilisateurs semaine débutant le " + period;
      }
      if ($("#month").val()) {
        period = $("#month").val();
        url = '/users/count/month';
        message = "Nouveaux utilisateurs mois débutant le " + period;
      }
      if ($("#year").val()) {
        period = $("#year").val();
        url = '/users/count/year';
        message = "Nouveaux utilisateurs année débutant le " + period;
      }
      
      $.ajax({
        
        url : url,
        type : 'POST',
        dataType: 'json',
        data: JSON.stringify({
          'period': period
        }),
        async: true,
        success : function(response){
          $("#newUsersPerPeriod").html(response[0]['COUNT(*)']);
          $("#p_newUsersPerPeriod").html(message);
        }
      });
    }

    let nbUsersByPlace = () => {
      
      let place = 'France';
      let url = '/users/count/country';
      let message = "Nombre d'utilisateurs pour le pays: " + place;

      if ($("#ville").val()) {
        place = $("#ville").val();
        message = "Nombre d'utilisateurs pour la ville: " + place;
      }
      if ($("#commune").val()) {
        place = $("#commune").val();
        url = '/users/count/zip';
        message = "Nombre d'utilisateurs pour la commune: " + place;
      }
      if ($("#pays").val()) {
        place = $("#pays").val();
        url = '/users/count/country';
        message = "Nombre d'utilisateurs pour le pays: " + place;
      }
      
      $.ajax({
        
        url : url,
        type : 'POST',
        dataType: 'json',
        data: JSON.stringify({
          'place': place
        }),
        async: true,
        success : function(response){
          $("#nbUserByPlace").html(response[0]['COUNT(*)']);
          $("#p_nbUserByPlace").html(message);
        }
      });
    }

    let nbUsersBySex = (sex = 'Femme') => {
      
      let message = "Nombre d'utilisateurs par sexe: " + sex;
      
      $.ajax({
        
        url : '/users/count/sex',
        type : 'POST',
        dataType: 'json',
